#! /bin/bash

set -e

# Change into top directory.
cd "$(dirname "$0")"
cd ..

py.test

cd lab
python -m doctest reports/__init__.py experiment.py tools.py parser.py
cd ..

cd downward
python -m doctest downward/suites.py
cd ..

cd docs
make -B html
cd ..

cd examples
./showcase-options.py --all
cd simple
rm -rf /tmp/simple-exp
./simple-exp.py --all
cd ../..

echo TESTS PASSED
