function format {
    printf "%05d" $1
}

if [[ $SGE_TASK_ID < 1 || $SGE_TASK_ID > $NUM_TASKS ]]; then
    echo "error: SGE_TASK_ID must be in range 1..$NUM_TASKS" 1>&2
    exit 2
fi

RUN=${RUN_IDS[$(($SGE_TASK_ID-1))]}
let "LOWER = ((RUN - 1) / 100) * 100 + 1"
let "UPPER = (((RUN + 99) / 100) * 100)"
DIR="runs-$(format $LOWER)-$(format $UPPER)/$(format $RUN)"

cd $DIR
./run
RETCODE=$?
if [[ $RETCODE != 0 ]]; then
    echo Run $RUN returned $RETCODE >> driver.err
fi
